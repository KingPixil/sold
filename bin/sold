#!/usr/bin/env node

const fs = require("fs");
const path = require("path");
const exec = require("child_process").exec
const configFilePath = path.join(dir, "soldfile.js");

fs.readFile(configFilePath, (err, content) => {
  if(err) {
    error("Could not find/read a `soldfile.js`");
    return;
  }

  exec("node " + configFilePath, function(err, stdout) {
    console.log(stdout);
  });
});
